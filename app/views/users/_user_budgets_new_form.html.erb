<%= form_with(model: @budget, local: true) do |f| %>

  <%= f.hidden_field :user_id, value: @user.id %>

  <div class="form-group">
    <%= f.label :category_id %>

    <%= f.text_field :category_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :amount %>

    <%= f.text_field :amount, class: "form-control" %>
  </div>

  <%= f.submit "Create budget", class: "btn btn-block btn-outline-secondary" %>
<% end %>
