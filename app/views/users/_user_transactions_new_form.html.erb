<%= form_with(model: @transaction, local: true) do |f| %>

  <%= f.hidden_field :user_id, value: @user.id %>

  <div class="form-group">
    <%= f.label :amount %>

    <%= f.text_field :amount, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :category_id %>

    <%= f.collection_select :category_id, Category.all, :id, :to_s, {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :transaction_date %>

    <%= f.date_select :transaction_date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :account_id %>

    <%= f.collection_select :account_id, Account.all, :id, :to_s, {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :event %>

    <%= f.text_field :event, class: "form-control" %>
  </div>

  <%= f.submit "Create transaction", class: "btn btn-block btn-outline-secondary" %>
<% end %>
