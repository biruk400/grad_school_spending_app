<div class="card mb-3">
  <h2 class="card-header h4">
    Upcoming Transaction #<%= upcoming_transaction.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>User</dt>
      <!-- Display user_id start -->
      <dd><%= upcoming_transaction.user_id %></dd>
      <!-- Display user_id end -->

      <dt>Name</dt>
      <!-- Display name start -->
      <dd><%= upcoming_transaction.name %></dd>
      <!-- Display name end -->

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back upcoming_transaction, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <!-- Edit link upcoming_transaction start -->
      <div class="col">
        <%= link_to edit_upcoming_transaction_url(upcoming_transaction), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>
      <!-- Edit link upcoming_transaction end -->

      <!-- Delete link upcoming_transaction start -->
      <div class="col">
        <%= link_to upcoming_transaction, method: :delete, data: { confirm: "Do you really want to delete this upcoming_transaction?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
      <!-- Delete link upcoming_transaction end -->
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(upcoming_transaction.updated_at) %> ago
  </div>
</div>
