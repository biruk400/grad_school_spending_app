<div class="card mb-3">
  <h2 class="card-header h4">
    Transaction #<%= transaction.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>User</dt>
      <dd>
        <% if @transaction.user.present? %>
          <%= link_to transaction.user, transaction.user %>
        <% end %>
      </dd>

      <dt>Amount</dt>
      <dd><%= transaction.amount %></dd>

      <dt>Category</dt>
      <dd>
        <% if @transaction.category.present? %>
          <%= link_to transaction.category, transaction.category %>
        <% end %>
      </dd>

      <dt>Transaction date</dt>
      <dd><%= transaction.transaction_date %></dd>

      <dt>Account</dt>
      <dd>
        <% if @transaction.account.present? %>
          <%= link_to transaction.account, transaction.account %>
        <% end %>
      </dd>

      <dt>Event</dt>
      <dd><%= transaction.event %></dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back transaction, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_transaction_url(transaction), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to transaction, method: :delete, data: { confirm: "Do you really want to delete this transaction?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(transaction.updated_at) %> ago
  </div>
</div>
